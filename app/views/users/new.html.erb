<h1>Create User</h1>
<!-- local: true sets the page for full redirect by default
forms use ajax unless disabled like so-->
<p style="color: green"><%= flash[:notice] %></p>
<%if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, 'error') %> prohibited this user
      from being created:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, local: true do |f|%> 
    <div>
      <%= f.label :"first name" %><br>
      <%= f.text_field :f_name %>
    </div>
   <p>
      <%= f.label :"last name" %><br>
      <%= f.text_field :l_name %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :"user name" %><br>
      <%= f.text_field :user_name %>
    </p>
    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :"confirm password" %><br>
      <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<%end%> 