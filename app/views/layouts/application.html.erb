    <style>
      h1 {
        color: red;
      }
       /* add inline styles here  */
    </style>
  </head>

  <body id="home" class="open-left">
  <div id="offcanvas-left" class="hide">
    <ul>
      <li><a href="#">Create Article</a></li>
      <li><a href="#">Add comment</a></li>
      <li><a href="#">Go home</a></li>
    </ul>
  </div>
  <div class="togglebar">
    <div class="toggle" onclick="toggleLeft()">
      <i class="fa fa-bars"></i>
    </div>
  </div>
  <div >
    <%= yield %>
  </div>
  </body>
